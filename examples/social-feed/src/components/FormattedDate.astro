---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'time'> {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
